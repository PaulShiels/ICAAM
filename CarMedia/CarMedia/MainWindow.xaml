<Window x:Class="CarMedia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStyle="SingleBorderWindow"
        Loaded="Window_Loaded"
        Title="MainWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Width="650" Height="780" WindowState="Normal">
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="2.4*"/>
        </Grid.RowDefinitions>
        
        
        <Canvas x:Name="MediaFrame" x:FieldModifier="public" ></Canvas>
        
        <TextBlock Grid.Row="1" Background="Black"></TextBlock>
        <TextBlock Background="Black" Grid.Row="2"></TextBlock>
    </Grid>
</Window>
