<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
      xmlns:Clock="clr-namespace:Clock;assembly=Clock"
      x:Class="CarMedia.Home"            
      mc:Ignorable="d" 
      Background="Black"
    MinWidth="650" MinHeight="420">

    
    <UserControl.Resources>
        <Style x:Key="buttonStyle">
            <Setter Property="Control.Height" Value="50"/>
            <Setter Property="Control.Width" Value="100"/>
            <Setter Property="Control.Background" Value="CornflowerBlue"/>
            <Setter Property="Control.FontFamily" Value="DS-Digital"/>
            <Setter Property="Control.FontSize" Value="25"/>
            <Setter Property="Control.FontWeight" Value="Bold"/>
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="ButtonBorder" CornerRadius="8" BorderThickness="1" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.1*"/>
            <ColumnDefinition  Width="3.2*"/>
            <ColumnDefinition  Width="3*"/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Clock:AnalogClock Grid.RowSpan="4" Grid.ColumnSpan="5" HorizontalAlignment="Center" Margin="10,12,0,0" VerticalAlignment="Center"/>
        <Button x:Name="btnRadio" Content="Radio" HorizontalAlignment="Right" Margin="0,50,0,0" Style="{StaticResource buttonStyle}" Click="btnRadio_Click"></Button>
        <Button x:Name="btnMusic" Content="Music" Grid.Row="1" Style="{StaticResource buttonStyle}" Click="btnMusic_Click"></Button>
        <Button x:Name="btnVideo" Content="Video" Grid.Row="2" Style="{StaticResource buttonStyle}"></Button>
        <Button x:Name="btnInternet" Content="Internet" Grid.ColumnSpan="1" HorizontalAlignment="Right" Margin="0,0,0,45" Grid.Row="3" Style="{StaticResource buttonStyle}"></Button>
        <Button x:Name="btnPhone" Content="Phone" Grid.Column="3" Margin="-105,50,0,0" Style="{StaticResource buttonStyle}"></Button>
        <Button x:Name="btnGps" Content="GPS" Grid.Column="2" Grid.Row="1" Style="{StaticResource buttonStyle}"></Button>
        <Button x:Name="btnCamera" Content="Camera" Grid.Column="2" Grid.Row="2" Style="{StaticResource buttonStyle}"></Button>
        <Button x:Name="btnSettings" Content="Settings" Margin="0,0,0,45" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="3" Style="{StaticResource buttonStyle}"></Button>
    </Grid>
</UserControl>
