<UserControl x:Class="CarMedia.Camera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             Width="640" Height="400" Background="Azure">
    <Grid>
        <Image x:Name="imgVideo" Stretch="Fill"/>
        <Label x:Name="txtDistance" FontSize="40" VerticalAlignment="Bottom" Margin="5" Background="CornflowerBlue"></Label>
        <Label Margin="70,0" VerticalAlignment="Bottom" FontSize="40" Content="cm"></Label>
        
        
    </Grid>
</UserControl>
